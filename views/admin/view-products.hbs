<section class="bg-white ">
  <div class="container ">
    <div class="row mt-5">
      <a href="/admin/add-product" class="btn btn-danger ml-auto">Add Product</a>
    </div>
    <div class="mt-5">
      <table class="table mt-5 " id="product-view">
        <thead>
          <tr>

            <th scope="col">Title</th>
            <th scope="col">Category</th>
            <th scope="col">Price</th>
            <th scope="col">Descripltion</th>
            <th>Image</th>
            {{#if Admin}}
            <th>Edit/Delete</th>
            {{/if}}
          </tr>
        </thead>
        <tbody>
          {{#each products}}
          <tr>

            <td>{{this.Name}}</td>
            <td>{{this.Category}}</td>
            <td>{{this.Price}}</td>
            <td>{{this.Description}}</td>
            <td><img style="width: 50px;height:50px" src="/product-images/{{this._id}}.jpg" alt=""></td>
            <td>
              <a href="/admin/edit-product/{{this._id}}" class="btn btn-success">Edit</a>
              <a href="/admin/delete-product/{{this._id}}" class="btn btn-info"
                onclick="return confirm('Are you sure want to delete {{this.Name}}?')">Delete</a>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</section>
<script>
  $(document).ready(function () {
    $('#product-view').DataTable();
  });
</script>