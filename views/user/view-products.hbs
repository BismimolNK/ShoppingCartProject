
  <section>
    <div class="container mt-5">
      <div class="row">
        {{#each products}}


        <div class="col-md-3 p-3">
          <div class="card text-white text-center bg-dark" style="width: 15rem; height:25rem">
            <img class="card-img-top" style="height: 13rem;" src="/product-images/{{this._id}}.jpg" alt="Card image cap">
            <div class="card-body">
              <h5 class="card-title">{{this.Name}}</h5>
              <h5 class="card-title">Rs.{{this.Price}}</h5>
              <p class="card-text">{{this.Description}}</p>
             
              <button onclick="addTocart('{{this._id}}')" class="btn btn-primary">Add to Cart</button>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>

  </section>

